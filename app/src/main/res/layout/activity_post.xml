<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    tools:context=".PostActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova publicação"
        android:textSize="24sp"
        android:textColor="#E2725B"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextPost"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Digite sua denúncia:"
        android:textColorHint="#434343"
        android:textColor="@color/black"
        android:padding="10dp"
        android:gravity="top|start"
        android:background="@android:drawable/editbox_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/post_camera"
                android:layout_margin="10dp"
                app:tint="#E2725B" />

            <ImageView
                android:id="@+id/galleryIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/post_gallery"
                android:layout_margin="10dp"
                app:tint="#E2725B" />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/post_delete"
                android:layout_margin="10dp"
                app:tint="#E2725B" />

            <ImageView
                android:id="@+id/anonymousIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/post_visibilityon"
                android:layout_margin="10dp"
                app:tint="#E2725B" />

            <ImageView
                android:id="@+id/locatonIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/post_location"
                android:layout_margin="10dp"
                app:tint="#E2725B" />

        </LinearLayout>

        <Button
            android:id="@+id/submitPostButton"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:backgroundTint="#E2725B"
            android:textColor="#FFF"
            android:textSize="14sp"
            app:strokeWidth="1dp"
            app:strokeColor="#E4DCDB"
            android:layout_gravity="end" />
    </LinearLayout>
</LinearLayout>
