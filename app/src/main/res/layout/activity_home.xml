<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Nome do aplicativo -->
    <TextView
        android:id="@+id/nomedoapp"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:text="Safe City"
        android:textColor="#CEE2725B"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Frase chave -->
    <TextView
        android:id="@+id/fraseinicio"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="Compartilhe informações e ajude a proteger sua comunidade"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btiniviodenuncia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nova Denúncia"
            android:textSize="11dp" />

        <Button
            android:id="@+id/btinicioboletim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Boletim"
            android:textSize="11dp" />

        <Button
            android:id="@+id/btiniciomapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mapa"
            android:textSize="11dp" />

        <Button
            android:id="@+id/btinicioajuda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ajuda"
            android:textSize="11dp" />

    </LinearLayout>

    <!-- Blocos de conteúdo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bloco 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="141dp"
                android:layout_weight="1"
                android:contentDescription="Imagem Acidente"
                android:src="@drawable/acidente" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="25dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Acidente entre carreta com cilindro de gás e caminhão interdita pista expressa da Via Dutra por 2 horas em Guarulhos, Grande SP" />
        </LinearLayout>

        <!-- Bloco 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="141dp"
                android:layout_weight="1"
                android:contentDescription="Imagem Roubo"
                android:src="@drawable/roubo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="25dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Polícia persegue suspeitos de roubo a casa por 30 km em SP; 4 foram presos e 1 morreu" />
        </LinearLayout>

        <!-- Bloco 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="291dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="141dp"
                android:layout_weight="1"
                android:contentDescription="Imagem Trevo"
                android:src="@drawable/trevo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:text="Prefeitura libera último viaduto do Trevo de Bonsucesso e complexo que liga a Dutra à avenida Papa João Paulo I"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
