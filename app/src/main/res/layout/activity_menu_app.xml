<?xml  version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="vertical">

    <!-- Icone Menu   -->
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="#FF5722"
        android:layout_marginTop="5dp" />

    <!--Usuario-->
    <TextView
        android:id="@+id/textMENUser"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="Usuário:"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <!--Denuncia-->
    <ImageButton
        android:id="@+id/MenuDenuncia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orange"
        tools:srcCompat="@drawable/denun"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textdenuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Inserir nova denúncia"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"/>

    <!--Visualizar Denuncia-->

    <ImageButton
        android:id="@+id/MenuVisualizar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orangetom1"
        tools:srcCompat="@drawable/ver" />

    <TextView
        android:id="@+id/textvisualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Visualizar publicação"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"/>

    <!--Mapa-->
    <ImageButton
        android:id="@+id/MenuMapa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orangetom2"
        tools:srcCompat="@drawable/mapa"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textmapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Acessar Mapa"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="15dp"/>

    <!--Boletim-->

    <ImageButton
        android:id="@+id/MenuBoletim"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orangetom3"
        tools:srcCompat="@drawable/boletim" />

    <TextView
        android:id="@+id/textboletim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Delegacia Eletrônica - Boletim"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <!--Configuração-->

    <ImageButton
        android:id="@+id/MenuConfig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orangetom4"
        tools:srcCompat="@drawable/config" />

    <TextView
        android:id="@+id/textconfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Configuração"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <!--Ajuda-->

    <ImageButton
        android:id="@+id/MenuAjuda"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orangetom5"
        tools:srcCompat="@drawable/Ajuda" />

    <TextView
        android:id="@+id/textajuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Ajuda"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:text="Todos os direitos reservados ©"
        android:textColor="#DAD2D2"
        android:layout_marginTop="70dp"/>

</LinearLayout>

